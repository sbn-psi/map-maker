{
    "display": "Node 16",
  
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "ES6",
      "target": "es2021",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node16"
    }, 
    "include": [
        "server.ts",
        "backend/**/*"
    ]
}